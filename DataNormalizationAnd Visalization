#normalization will be performed based on log2 in count data
#this is a quality control at sample level

rld <-rlogTransformation (dds)

# for visualizing data in heatmap
   library ("pheatmap")
   library ("RColorBrewer")

     mat <- assay (rld)(head (order(resgroup_gene $ Padj), 20), 
     ])

     #subtracting raw means from P-values

     mat<- mat - rowMeans (mat)

     df <- as.data.frame (colData(rld) [ , c("group")])

     #column's name in dataframe is "sample"

     colnames(df) <- "sample"
       row.names (df) <- colnames (mat)

       Pheatmap (mat, annotation_col =df) 

